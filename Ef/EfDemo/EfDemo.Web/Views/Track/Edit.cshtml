@model EfDemo.Web.Models.ViewModels.Track

@{
    ViewBag.Title = "Edit Track";
}

<h2>Edit Track</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CDId)
        
